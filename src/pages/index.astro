---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import indexJSON from "../assets/index.json";
import MetaTags from "../components/MetaTags.astro";
import { index } from "../assets/metaData.json";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/the-fairy-browmother/bat.png" />
    <link rel="sitemap" href="/the-fairy-browmother/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <MetaTags
      title={index.title}
      description={index.description}
      url={index.url}
      img={index.img}
    />
  </head>
  <body>
    <Navigation />
    <main class="flex flex-col relative">
      <img
        alt="Splash Image"
        src=""
        class="w-full h-full bg-[var(--grey)] flex-auto flex justify-center items-center"
      />
      <div class="absolute right-0 md:right-32 bottom-8 p-4">
        <h3 class="md:text-5xl">{indexJSON.description}</h3>
        <p>{indexJSON.sub}</p>
      </div>
    </main>
    <Footer />
  </body>
</html>
