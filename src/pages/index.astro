---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import indexJSON from "../assets/index.json";
import MetaTags from "../components/MetaTags.astro";
import { index } from "../assets/metaData.json";
import { Image } from "astro:assets";

import splashimg from "../assets/pictures/graphics/TFBMSplashGreenClose.png";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/the-fairy-browmother/bat.png" />
    <link rel="sitemap" href="/the-fairy-browmother/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <MetaTags
      title={index.title}
      description={index.description}
      url={index.url}
      img={index.img}
    />
  </head>
  <body>
    <Navigation fontColor="white" />
    <main class="flex flex-col relative">
      <Image
        alt=""
        src={splashimg}
        class="w-full h-full bg-[var(--grey)] flex-auto object-cover object-[30%]"
      />
      <div
        class="absolute right-0 md:right-32 bottom-8 p-4 text-white text-shadow-black text-shadow-2xs"
      >
        <h3 class="md:text-5xl">{indexJSON.description}</h3>
        <p>{indexJSON.sub}</p>
      </div>
    </main>
    <Footer />
  </body>
</html>
