---
import '../styles/global.css'
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'
import FAQItem from '../components/FAQItem.astro'
import FAQJSON from "../content/faq.json"

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/public/bat.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>FAQ</title>
	</head>
	<body>
		<Navigation />
        <main class="py-16 px-44">
			<section class="flex gap-8 justify-between items-center pt-28">
				<div class="bg-[var(--grey)] w-[624px] h-[400px]">	
					<!-- Graphic element here -->
				</div>
				<h2 class="text-center m-auto">Frequently Asked Questions</h2>
			</section>
			<section class="flex flex-col justify-center items-center gap-8 p-8">
				{FAQJSON.map((item) => {
					return (
						<FAQItem question={item.question} answer={item.answer}/>
					)
				})}
			</section>
		</main>
		<Footer />
	</body>
</html>
