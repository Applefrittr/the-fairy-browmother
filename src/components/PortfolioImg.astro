---
import { Image } from "astro:assets";

const { path } = Astro.props;
---

<div class="bg-[var(--grey)] w-2xs md:w-[425px]">
  <Image
    src={path()}
    alt="Portfolio image"
    class="opacity-0 translate-y-6 transition-all"
    id={`portfolioimg`}
  />
</div>
<script>
  const imgs = document.querySelectorAll(`#portfolioimg`);

  window.addEventListener("load", () => {
    imgs.forEach((img) => {
      img.classList.add("opacity-100");
      img.classList.add("translate-y-[0px]");
    });
  });
</script>
