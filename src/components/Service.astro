---
const { name, description, price, time, reverse } = Astro.props;
---

<div
  class={`flex flex-col ${reverse ? "md:flex-row-reverse" : "md:flex-row"} gap-12 justify-center items-center`}
>
  <div class="flex flex-col gap-6 md:w-96">
    <h3>{name}</h3>
    <p>
      {description}
    </p>
    <div class="flex gap-8">
      <p class="p-3 px-4 text-white bg-[var(--dark-purp)] rounded-[8px] h-max">
        {price}
      </p>
      <p class="p-3 px-4 bg-[var(--light-purp)] rounded-[8px] h-max">
        {time}
      </p>
    </div>
  </div>
  <div class="bg-[var(--grey)] w-full md:w-96 h-96">
    <!-- Img element here -->
  </div>
</div>
